%h1 Sign Up

= form_with model: @user, url: sign_up_path do |form|
  - if @user.errors.any?
    %div 
      - @user.errors.full_messages.each do |x|
        %div= x
  %div
    = form.label :Email
    = form.text_field :email, placeholder: 'Email'
  %div
    = form.label :Firstname
    = form.text_field :firstname, placeholder: 'Firstname'
  %div
    = form.label :Lastname
    = form.text_field :lastname, placeholder: 'Lastname'
  %div
    = form.label :Password
    = form.password_field :password, placeholder: 'Password'
  %div
    = form.label :Confirm_password
    = form.password_field :password_confirmation, placeholder: 'Confirm password'
  %div
    = form.submit "Sign Up"
